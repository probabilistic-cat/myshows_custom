{
    "manifest_version": 2,
    "name": "Myshows Custom",
    "version": "1.0.0",
    "description": "Myshows Custom.",
    "browser_action": {
        "default_area": "navbar",
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "64": "icons/icon64.png"
        }
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [{
        "matches": [
            "https://myshows.me/*",
            "https://*.myshows.me/*"
        ],
        "js": [
            "jquery-3.7.1.slim.min.js",
            "common/consts.js",
            "src/service/Utils.js",
            "src/page/Name.js",
            "src/page/ViewEpisode.js",
            "src/page/ViewRating.js",
            "src/page/ViewShow.js",
            "src/page/View.js",
            "src/service/OptionHandler.js",
            "src/service/PageObserver.js",
            "src/content.js"
        ]
    }]
}
